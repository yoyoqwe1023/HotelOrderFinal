            var position = element.getBoundingClientRect().top;
            var windowHeight = window.innerHeight;

            if (position < windowHeight - 50) {
                element.classList.add('show');
            }
        }
    });


    // 圖片數量和索引
    var images = ["../../image/HomePage/HomePage1.jpg", "../../image/HomePage/HomePage2.jpg", "../../image/HomePage/HomePage3.jpg", "../../image/HomePage/HomePage4.jpg"];
    var currentIndex = 0;

    // 切換圖片函式
    function changeImage() {
        // 取得下一個圖片的索引
        currentIndex = (currentIndex + 1) % images.length;
        // 取得下一個圖片的路徑
        var nextImage = images[currentIndex];

        // 淡出效果
        $('#TopBlockID').animate({ opacity: 0.3 }, 0, function () {
            // 在淡出完成後，設置新圖片並執行淡入效果
            $(this).css('background-image', 'url(' + nextImage + ')');
            $(this).animate({ opacity: 0.5 }, 1000);
        });
    }

    setInterval(changeImage, 3000);
</script>









