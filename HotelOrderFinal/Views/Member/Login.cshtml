
@{
    ViewData["Title"] = "Login";
}

<h2>登入系統</h2>

@using (Html.BeginForm("Login", "Member", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>請輸入帳號與密碼</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            帳號 (註冊時的手機)
            <div class="col-md-10">
                @Html.TextBox("MemberPhone", null, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            密碼
            <div class="col-md-10">
                @Html.TextBox("MemberPassword", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <input type="submit" value="登入" class="btn btn-default" />
                @ViewBag.Message
            </div>
        </div>
    </div>
}
